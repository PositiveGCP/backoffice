            <li class="divider"></li>
            <li><a href="#!">Guía </a></li> -->
          </ul>
        </div> <!-- ./nav-wrapper -->
      </nav> <!-- nav -->
    </div> <!-- /#top-navbar -->
  </div> <!-- /#main-wrapper -->

  <%- defineContent('context') -%>

  <script>
    less = {
      env: "production",
      logLevel: 0,
    };
  </script>
  <script src="./js/home.js" charset="utf-8"></script> <!-- Script todo -->
  <script src="./js/templates/sidebar.js" charset="utf-8"></script> <!-- Script render barra lateral -->
  <script src="./bower_components/less/dist/less.js" charset="utf-8"></script> <!-- Less -->
</body>
</html>
